---
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
import Header from '../components/Header.astro';
import Arrows from '../sections/Arrows.astro';
import Basically from '../sections/Basically.astro';
import Signs from '../sections/Signs.astro';
---

<Layout title="Welcome to Astro.">
	<Header
		links={[
			{
				name: "Signs",
				link: "#signs"
			},
			{
				name: "Arrows",
				link: "#arrows"
			},
			/*{
				name: "Badges",
				link: "#badges"
			},
			{
				name: "Devlog",
				link: "/devlog"
			}*/
		]}
	></Header>
	<main class="relative w-full -z-10">
		<Section class="min-w-full min-h-[130vh] flex -z-1 sticky top-0" name="" section_id="home" addIntersection={false}>
			<Basically></Basically>
		</Section>
		<Section name="Signs">
			<Signs></Signs>
		</Section>
		<Section name="Arrows">
			<Arrows></Arrows>
		</Section>
		<!--<Section name="Badges" section_id="badges">
			<div class="flex items-center justify-center min-h-full min-w-full"><h1>Badges</h1></div>
		</Section> -->
	</main>
</Layout>

