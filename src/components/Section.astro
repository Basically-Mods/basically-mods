---
interface Props {
    name: string;
}

const { name } = Astro.props;
---

<section class="min-w-full min-h-screen flex relative -z-1">
    <div class="sticky top-0 h-screen min-w-full" data-section-name={name}></div>
    <slot />
</section>



<script>
    import { checkIntersection } from "../function/section";
    const elements = document.querySelectorAll(`[data-section-name]`);
    elements && elements.forEach(element => {
        element instanceof HTMLElement && checkIntersection(element);
    });
</script>